<%include partials/header%>
<div class="container">
<h1 class="logo">Vocapp</h1>
<h1 class="title">Your Words</h1>
<form class = "search" action="/words/search" method="POST">
    <input class="searchbar" type="text" name="word" id="">
    <input class="searchbutton" type="submit" value="Search!">
</form>
<a class="button-add" href="/words/new">Add a new word!</a>
<table class="table">
    <thead>
        <tr>
            <th class="table__head">Word</th>
            <th class="table__head">Translation</th>
            <th class="table__head">Meaning</th>
            <th class="table__head">Action</th>
        </tr>
    </thead>
    <tbody>
        <%words.forEach(function(word){%>
            <tr class="table__row">
                <td class="table__col"><span><%=word.Word%></span></td>
                <td class="table__col"><span><%=word.Translation%></span></td>
                <td class="table__col"><span><%=word.Meaning%></span></td>
                <td class="table__col table__action">
                    <a class="button-edit inline"href=<%="/words/"+word.ID+"/edit"%>>E</a>
                    <form class="inline" method="POST" action=<%="/words/"+word.ID+"?_method=DELETE"%>>
                        <input class="button-delete" type="submit" value="X">
                    </form>
                </td>
            </tr>
        <%});%>
    </tbody>
</table>
</div>
<%include partials/footer%>